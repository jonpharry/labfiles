extends layout

block content
    .container
      .header
        .header-title
          h2 #{title}
    .panel.mtm
      .panel-header
        center
          h3 Welcome #{displayName}
        |       
        .panel-body
          .login-form
            .control-box
              span Current Account balance:
              |             
              span #{balance}
            |                     
    .top-right
      a(href='/profile?user='+userid) Profile
      |  
      a(href='/logout') Logout
